@model ItemPedido
@{
    ViewData["Title"] = "Registrar";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<h5>Preecha os campos abaixo para registrar um item</h5>
<br>

<form method="post">
    <table>
        <thead>
            <th asp-for="descricao">Descrição:</th>
            <th sp-for="valor_unitario">Valor da Unidade</th>
            <th asp-for="quantidade">Quantidade:</th>
        </thead>
        <tbody>
            <td><input asp-for="descricao" required></td>
            <td><input asp-for="valor_unitario" required></td>
            <td><input asp-for="quantidade" required></td>
            <td><input type="submit" class="btn btn-primary" value="Confirmar"
                    style="padding: 2px; padding-left: 4px; margin-left: 4px;"></td>
        </tbody>
    </table>
</form>
